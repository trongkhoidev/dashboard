# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Copy file này thành .env và điền credentials của bạn

# SQL Server Configuration (HUMAN_2025)
# Nếu dùng Docker: docker run -d --name sql -e 'ACCEPT_EULA=Y' -e 'SA_PASSWORD=YourPassword123@' -p 1433:1433 mcr.microsoft.com/azure-sql-edge
SQL_SERVER_HOST=127.0.0.1
SQL_SERVER_PORT=1433
SQL_SERVER_USER=sa
SQL_SERVER_PASSWORD=your_password_here
SQL_SERVER_DATABASE=HUMAN_2025

# MySQL Configuration (PAYROLL)
# Nếu chưa có database: mysql -u root -p -e "CREATE DATABASE payroll;"
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=payroll

# JWT Authentication
JWT_SECRET_KEY=hr-payroll-dashboard-secret-key-2026-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_ENV=development
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# API Settings
API_PREFIX=/api
API_VERSION=v1
